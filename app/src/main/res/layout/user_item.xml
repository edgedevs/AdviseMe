<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/user_item"
        android:orientation="horizontal"
        android:padding="10dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="35dp">

                <ImageView
                    android:id="@+id/profile_img_user_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_person"
                    android:clickable="true"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name_user_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="name"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/qualification_user_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="bio"
                android:paddingStart="5dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/verified_adviser_user_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"

                android:paddingStart="5dp"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/send_request_user_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Request"
                android:paddingStart="5dp"
                android:textColor="@color/blue_selected"
                android:textSize="15sp"
                android:layout_marginLeft="70dp"
                android:textStyle="bold"

                />


            <LinearLayout

                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical|right">





            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>