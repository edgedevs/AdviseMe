<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".EditAnswer">



    <ImageView
        android:id="@+id/image_Reply2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"

        />


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:padding="10dp"
            android:id="@+id/answer_et2"
            android:background="@drawable/custom_input_question"
            android:textStyle="bold"
            android:hint="answer..."
            android:textColorHint="@color/grey"
            android:textColor="@android:color/black"

            />

        <ImageView
            android:id="@+id/ans_attachment2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"

            android:clickable="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_attachment"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_answer_submit2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/button_background"
        android:text="Edit Post"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/edit_ans_linear_layout2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


    </LinearLayout>




</LinearLayout>