<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/q_item"
        android:orientation="horizontal"
        android:padding="10dp"

        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="35dp">

                <ImageView
                    android:id="@+id/iv_que_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_person"
                    android:clickable="true"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_que_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="time"
                android:textColor="@color/greenPrimary"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/name_que_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="name"
                android:paddingStart="5dp"
                android:textColor="@color/grey"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/que_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="questions"
                android:paddingStart="5dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical|right">

                <LinearLayout
                    android:id="@+id/answer_layout_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/createdxmlname"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ques_answer_icon_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:padding="3dp"
                        android:src="@drawable/ic_answer_icon" />

                    <TextView
                        android:id="@+id/reply_item_que"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:padding="3dp"
                        android:text="Answer"
                        android:textColor="@color/grey"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/upvote_layout_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ques_upvote_icon_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:padding="3dp"
                        android:src="@drawable/ic_upvote"  />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"

                        android:padding="3dp"
                        android:text="Upvote"
                        android:textColor="@color/grey"

                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/upvote_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="7dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />


                <LinearLayout

                    android:id="@+id/follow_item_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/q_follow_icon_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:padding="3dp"
                        android:src="@drawable/ic_follow_icon_grey" />

                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:padding="3dp"
                        android:text="Follow"
                        android:textColor="@color/grey"
                        android:textSize="10sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/request_layout_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ques_request_icon_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="@android:color/transparent"
                        android:padding="3dp"
                        android:src="@drawable/ic_exit" />

                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="3dp"
                        android:text="Request"
                        android:textColor="@color/grey"
                        android:textSize="10sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/more_layout_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="showPopup"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ques_more_icon_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:padding="4dp"
                        android:src="@drawable/more_icon" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:clickable="false"
                        android:padding="3dp"
                        android:text="More"
                        android:textColor="@color/grey"
                        android:textSize="10sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>